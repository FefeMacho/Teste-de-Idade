			var idade = prompt('Digite sua Idade ae Mano...')

							if (idade <= 15) {
								document.write('Seu moleque (Criança)')
							}
							if (idade <= 30 && idade > 15) {
								document.write("Corsa ja ta na metade do Financiamento (jovem)")
							}
							if (idade <= 60 && idade > 30) {
								document.write("Calvice (adulto)")
							}
							if (idade <=120 && idade > 60) {
								document.write('Terror do INSS(Velho)') }
							</script>
							
